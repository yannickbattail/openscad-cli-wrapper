{
  "name": "openscad-cli-wrapper",
  "description": "wrapper library around openscad",
  "version": "1.4.6",
  "author": "XcinnaY",
  "maintainer": "XcinnaY",
  "license": "LGPL-3.0-or-later",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "clean": "rm -Rf ./*.js ./*/*.js coverage dist tests/unit/run/out || true",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest run --coverage ./tests/",
    "lint": "eslint --fix src tests",
    "format": "prettier --log-level error --write . --ignore-path ./.gitignore",
    "depcheck": "npx depcheck@latest --quiet --ignore-path=./.gitignore --ignores='@types/*,@vitest/coverage-v8'",
    "check": "npm run depcheck && npm run build && npm run lint && npm run format && npm run test",
    "check-updates": "npx npm-check-updates -u && npm i && npm dedupe && npm run check",
    "publish-new-v": "npm version patch --no-git-tag-version && npm run check && npm publish"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "chalk": "^5.6.2",
    "nanoid": "^5.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.4.0",
    "@vitest/coverage-v8": "^3.2.4",
    "depcheck": "^1.4.7",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vitest": "^3.2.4"
  }
}
