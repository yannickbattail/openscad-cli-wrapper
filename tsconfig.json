{
  "compilerOptions": {
    "target": "ES2024",
    "module": "node16",
    "lib": ["ES2024", "dom"],
    "outDir": "./dist",
    "moduleResolution": "node16",
    "rootDir": "./",
    "resolveJsonModule": true,
    "declaration": true,
    "experimentalDecorators": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules", "dist"]
}
